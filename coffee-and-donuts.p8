local player

function _init()
    player={
        x=50,
        y=64,
        is_facing_right=false
    }
end

function _update()
    if btn(0) then 
        player.is_facing_right=false
        player.x-=1
    end
    if btn(1) then 
        player.is_facing_right=true
        player.x+=1
    end
    if btn(2) then 
        player.y-=1
    end
    if btn(3) then 
        player.y+=1
    end
end

function _draw()
    cls()
    sspr(8,0,16,8,player.x,player.y,16,8, player.is_facing_right)
end

